<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
 >


    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="@drawable/backguang_l_hui"
        android:orientation="vertical"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <com.compassecg.test720.compassecg.View.CircleImageView
            android:id="@+id/header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            android:contentDescription="@null"
            android:layout_marginTop="10dp"
             />

        <TextView
            android:id="@+id/name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:layout_below="@+id/header"

            android:layout_centerHorizontal="true"
            android:text="带薪年假"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/zhwei"
            android:layout_width="match_parent"
            android:lines="2"
            android:padding="5dp"
            android:text="看法可能翻翻罚款法兰克反了反了反了反了发难法律反了你发了疯男哪里呢"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/name"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="关注"
            android:textColor="@color/lv"
            android:gravity="center"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backguang_l_blue"
            android:id="@+id/textView" />
    </RelativeLayout>

</RelativeLayout>
